{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "target": "esnext",
    "sourceMap": false,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "/@/*": ["./src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "../../types/**/*.d.ts",
    "src/security-restrictions.ts",
    "src/mainWindow.ts",
    "src/index.ts"
  ]
}

